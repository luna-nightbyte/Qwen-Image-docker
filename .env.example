# DashScope API Key (optional - for prompt enhancement)
# Leave empty to skip prompt enhancement and use original prompts
# Get your API key from: https://dashscope.console.aliyun.com/
DASHSCOPE_API_KEY=

# Model Paths (for offline use with local models)
# Leave as default to use the mounted ./models directory
# Or set to HuggingFace model ID to download automatically (e.g., "Qwen/Qwen-Image")
MODEL_PATH=/app/models/Qwen-Image
MODEL_PATH_EDIT=/app/models/Qwen-Image-Edit-2511

# GPU Configuration
# Number of GPUs to use (default: 1)
NUM_GPUS_TO_USE=1

# Specify which GPU(s) to use (comma-separated for multiple)
# Example: CUDA_VISIBLE_DEVICES=0 (single GPU)
# Example: CUDA_VISIBLE_DEVICES=0,1 (multiple GPUs)
CUDA_VISIBLE_DEVICES=0

# Task Queue Configuration
TASK_QUEUE_SIZE=100
TASK_TIMEOUT=300

# Memory Optimization (for GPUs with less than 16GB VRAM)
# Enable CPU offloading to reduce GPU memory usage (slower but works on 8GB GPUs)
ENABLE_CPU_OFFLOAD=true
# Enable low VRAM optimizations (attention slicing, VAE tiling, etc.)
LOW_VRAM_MODE=true
